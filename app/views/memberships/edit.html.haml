- page_title _('Edit user')

.page-header
  %h1
    = icon('user-circle-o')
    = _('%{user} of %{organization}') % { user: @membership.user.name, organization: @membership.organization.name }

= simple_form_for @membership, method: :patch, html: { class: 'form-horizontal' } do |f|
  = f.input :active, hint: _('Receives e-mail notifications')
  = f.input :bartender, hint: _('Can enroll for events')
  = f.input :planner, hint: _('Can create and modify events')
  = f.input :manager, hint: _('Can manage users')
  = f.actions do
    = f.button :submit
